{
  "compilerOptions": {
    "target": "ES2022",                         
    "module": "CommonJS",                       
    "declaration": true,                        
    "outDir": "./dist",                         
    "strict": true,                            
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true,                  
    "skipLibCheck": true,                       
    "strictNullChecks": true,                   
    "strictPropertyInitialization": false,      
    "noImplicitAny": true,                      
    "noImplicitThis": true,                     
    "noUnusedLocals": true,                     
    "noUnusedParameters": true,                 
    "baseUrl": ".",                             
    "paths": {
      "*": ["types/*"]                          
    }
  },
  "include": [
    "lib/*.ts",
    "*.ts"                              
  ],
  "exclude": [
    "node_modules",                             
    "**/*.spec.ts"                             
  ]
}
